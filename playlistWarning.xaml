<Window x:Name="Warning" x:Class="myTunes.playlistWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d" Height="196" Width="426" Icon="/errorIcon.ico" ResizeMode="NoResize">
    <!-- Icon image from https://iconarchive.com/show/oxygen-icons-by-oxygen-icons.org/Actions-window-close-icon.html -->
    <Grid>
        <Label x:Name="warningMessage" Content="Please enter a playlist name" HorizontalAlignment="Left" Margin="161,56,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="_Ok" HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Height="35" Width="92" FontSize="16" IsDefault="True" Click="Button_Click"/>
        <Image Margin="29,32,304,66" Source="/errorIcon.ico" Stretch="Fill"/>
        <!-- Icon image from  https://iconarchive.com/show/oxygen-icons-by-oxygen-icons.org/Actions-window-close-icon.html -->
    </Grid>
</Window>
