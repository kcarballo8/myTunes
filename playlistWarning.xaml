<Window x:Class="myTunes.playlistWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d"
        Title="playlistWarning" Height="217" Width="343">
    <Grid>
        <Label x:Name="warningMessage" Content="Please enter a playlist name" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="Ok" HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Height="35" Width="92" FontSize="16" IsDefault="True" Click="Button_Click"/>

    </Grid>
</Window>
